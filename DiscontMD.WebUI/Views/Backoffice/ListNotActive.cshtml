@model DiscontMD.BusinessLogic.DomainModel.AvailableCard[]
@{
    ViewBag.Title = "Неактивированые карты";
}
<div class="my-3 p-3 bg-white rounded box-shadow">
    `
    @if (Model != null && Model.Length > 0)
    {
        <h3>
            <a href="/Backoffice">
                <i class="fa fa-angle-double-left"></i>
            </a> Неактивированные карты
        </h3>
        <div class="row">
            <div class="col-md-12">

                @{ var i = Model.Length; }
                @foreach (var row in Model)
                {
                    <span class="badge badge-secondary">@Html.Raw(row.FormattedNum)</span>
                }
            </div>
        </div>
    }
    else
    {
        <div class="col-md-4">
            <h5 class="text-danger">
                <a href="/Backoffice">
                    <i class="fa fa-angle-double-left"></i>
                </a> Нет неактивированных карт
            </h5>
        </div>
    }

</div>