@model DiscontMD.BusinessLogic.DomainModel.Store
@{
    ViewBag.Title = "Настройки";
}

<div class="my-3 p-3 bg-white rounded box-shadow">
    <div class="pt-3">
        <div class="row">
            <div class="col-md-8">
                @using (Html.BeginForm("EditStore", "Backoffice"))
                {
                    <h5>Анонс на сайте</h5>
                    <div style="margin-bottom: 20px;">
                        <textarea name="newsLine" class="richHtml">
                            @Model.Settings.NewsLine
                        </textarea>
                    </div>
                    <h5>Контактная информация</h5>
                    <div style="margin-bottom: 20px;">
                        <textarea name="contacts" class="richHtml">
                            @Model.Settings.Contacts
                        </textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-8"><input type="submit" class="btn btn-block btn-outline-success" value="Сохранить" /></div>
                        <div class="col-md-4"><a href="/Backoffice/" class="btn btn-block btn-outline-secondary">Не сохранять</a></div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script>
    $(document).ready(function() {
        $('.richHtml').summernote({
            height: 300
        });
    });
</script>
}
