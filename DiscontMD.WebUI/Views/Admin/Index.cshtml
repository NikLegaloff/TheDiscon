@model DiscontMD.WebUI.Models.BackofficeDash
@{
    ViewBag.Title = "Мой офис";

}
<div class="my-3 p-3 bg-white rounded box-shadow">
    <div class="pt-3">
       <div class="row">
            <div class="col-md-3  mb-4">
                @using (Html.BeginForm("AddCards", "Admin", FormMethod.Get))
                {
                    <h5>Добавить карты</h5>
                    <div style="margin-bottom: 20px;">
                        Количество, х100<br/>
                        <input  required="true"  class="form-control form-control-lg" type="number" maxlength="6" max="999999"  name="count"/>
                    </div>
                    <div style="margin-bottom: 20px;">
                        <input type="submit" class="btn btn-block btn-outline-success" value="Добавить"/>
                    </div>
                }
            </div>
            <div class="col-md-3 mb-4">
                @using (Html.BeginForm("ActivateCard", "Backoffice"))
                {
                    <h5>Управление сайтом</h5>
                    <div class="list-group">
                            <a href="/Backoffice/EditStore/" class="list-group-item list-group-item-action">Анонс и контакты</a>
                            <a href="#" class="list-group-item list-group-item-action disabled">Внешний вид</a>
                        
                    </div>
                }
            </div>
        </div>
    </div>
</div>
